<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"> 
    <Grid>
        <ComboBox x:Name="comboBoxUsers" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Width="418" Height="30"
                  SelectionChanged="comboBoxUsers_SelectionChanged"/>
        <ComboBox x:Name="comboBoxAutos" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="418" Height="30"/>
        <Button x:Name="SaveDocument" Content="Создать документ" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top"
                Height="46" Width="152" Click="SaveDocument_Click"/>
    </Grid>
</Window>
